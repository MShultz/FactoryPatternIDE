<Window x:Class="GUILanguageAgnosticIDE.Dialogue"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUILanguageAgnosticIDE"
        mc:Ignorable="d"
        Title="Content Editor" Height="250" Width="200">
    <StackPanel HorizontalAlignment="Center">
        <TextBlock Text="Enter the content for this element" Margin="0,15"/>
        <TextBox x:Name="ResponseTextBox" Margin="0, 5" Text="Content"/>
        <TextBox x:Name="HeightTextBox" Text="Height" Margin="0,10"/>
        <TextBox x:Name="WidthTextBox" Text="Width" Margin="0,10"/>
        <Button Content="OK" Click="OKButton_Click" Margin="0,15"/>
    </StackPanel>
</Window>
